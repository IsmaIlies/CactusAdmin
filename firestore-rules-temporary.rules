rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ⚠️ RÈGLES TEMPORAIRES POUR TESTER LA MIGRATION/RESTAURATION ⚠️
    // À UTILISER UNIQUEMENT POUR LE DÉVELOPPEMENT/TEST
    // NE PAS UTILISER EN PRODUCTION !
    
    // Règles pour la collection users
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Règles pour la collection sales (données non migrées)
    match /sales/{saleId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null && 
                   (request.auth.uid == resource.data.userId || request.auth != null);
    }
    
    // Règles pour la collection contactsArgues (données non migrées)
    match /contactsArgues/{docId} {
      allow read, create, update: if request.auth != null;
    }

    // Règles pour la collection des commandes de leads (accès temporaire)
    match /leads_orders/{orderId} {
      allow read, create, update, delete: if request.auth != null;
    }
    match /leads_order/{orderId} {
      allow read, create, update, delete: if request.auth != null;
    }

    // Règles pour la collection objectives (données non migrées)
    match /objectives/{objectiveId} {
      allow read, create, update: if request.auth != null;
    }
    
    // Règles pour la collection missions
    match /missions/{missionId} {
      allow read, write: if request.auth != null;
      
      // SOUS-COLLECTIONS DES MISSIONS (ACCÈS TEMPORAIRE POUR TOUS LES UTILISATEURS AUTHENTIFIÉS)
      match /sales/{saleId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
        allow update: if request.auth != null && 
                     (request.auth.uid == resource.data.userId || request.auth != null);
      }
      
      match /contactsArgues/{docId} {
        allow read: if request.auth != null;
        allow create, update: if request.auth != null;
      }
      
      match /objectives/{objectiveId} {
        allow read, create, update: if request.auth != null;
      }
    }
    
    match /users/{userId}/chatHistories/{historyId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId}/chatHistories/{historyId}/messages/{messageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
